---
import Header from '../components/Header.astro';
import '@fontsource-variable/montserrat';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />

		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://cosrnic.dev/" />
		<meta property="og:title" content="cosrnic.dev" />
		<meta property="og:description" content="Cosmic's Website" />
		<meta property="theme-color" content="#EA5955" />

		<title>{title}</title>
	</head>
	<body class="bg-dark-300">
		<Header />
		<slot />
	</body>
</html>

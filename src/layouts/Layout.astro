---
import Header from '../components/Header.astro';
import '@fontsource-variable/montserrat';

import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<style is:global lang="postcss">

		* {
			scrollbar-color: theme(colors.primary) theme(colors.dark.200);
			scrollbar-width: thin;
		}

		::-webkit-scrollbar {
			width: 8px;
			background-color: theme(colors.dark.200);
		}

		::-webkit-scrollbar-thumb {
			-webkit-box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
			background-color: theme(colors.primary);
		}
	</style>

	<meta charset="UTF-8" />
	<meta name="description" content="Astro description" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/x-icon" href="/favicon.png" />
	<meta name="generator" content={Astro.generator} />

	<meta property="og:type" content="website" />
	<meta property="og:url" content="https://cosrnic.dev/" />
	<meta property="og:title" content="cosrnic.dev" />
	<meta property="og:description" content="Cosmic's Website" />
	<meta property="theme-color" content="#EA5955" />
	<ViewTransitions />
	<title>{title}</title>

	<body class="bg-dark-300">
		<Header transition:persist />
		<slot />
	</body>
</html>
